<IfModule mod_rewrite.c>

  RewriteEngine On
  RewriteBase /
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://itabau.com.br/$1 [R,L]
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]

</IfModule>

RewriteCond %{HTTP_REFERER} !^http://itabau.com.br/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://itabau.com.br$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.itabau.com.br/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.itabau.com.br$      [NC]
RewriteCond %{HTTP_REFERER} !^https://itabau.com.br/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://itabau.com.br$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.itabau.com.br/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.itabau.com.br$      [NC]
RewriteRule .*\.(jpg|jpeg|gif|png|bmp|js|php)$ / [R,NC]

